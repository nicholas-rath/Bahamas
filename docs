<body>
  <div>
    <h1>üèùÔ∏è Bahamas Countdown üèùÔ∏è</h1>
    <div class="goal-info">Goal: $4,000,000</div>
    <div class="goal-info" id="qualified">Qualified: $580,000</div>
    <div class="percent-display" id="percentDisplay">0% of the way to Nassau</div>
    <div class="progress-bar">
      <div class="progress" id="progress"></div>
    </div>
    <div class="remaining" id="remaining"></div>

    <div class="buttons">
      <button onclick="qualify(50000)">+ $50k</button>
      <button onclick="qualify(80000)">+ $80k</button>
      <button onclick="qualify(250000)">+ $250k</button>
      <button onclick="goBack()">Go Back</button>
      <button onclick="resetProgress()">Reset</button>
    </div>
  </div>

  <script>
    const goal = 4000000;
    let qualified = parseInt(localStorage.getItem('qualifiedAmount')) || 580000;
    let history = JSON.parse(localStorage.getItem('history')) || [];

    function updateDisplay() {
      document.getElementById('qualified').innerText = `Qualified: $${qualified.toLocaleString()}`;
      const percent = Math.min((qualified / goal) * 100, 100);
      document.getElementById('progress').style.width = percent + '%';
      document.getElementById('remaining').innerText = `Remaining: $${(goal - qualified).toLocaleString()}`;
      document.getElementById('percentDisplay').innerText = `${percent.toFixed(1)}% of the way to Nassau`;
      localStorage.setItem('qualifiedAmount', qualified);
      localStorage.setItem('history', JSON.stringify(history));
    }

    function qualify(amount) {
      qualified += amount;
      history.push(amount);
      updateDisplay();
    }

    function goBack() {
      if(history.length > 0) {
        const lastAmount = history.pop();
        qualified -= lastAmount;
        updateDisplay();
      }
    }

    function resetProgress() {
      qualified = 580000;
      history = [];
      updateDisplay();
    }

    updateDisplay();
  </script>
